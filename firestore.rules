rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all documents
    match /{document=**} {
      allow read: if true;
      
      // RESTRICT WRITE ACCESS
      // Only the specific admin email can write (create, update, delete)
      allow write: if request.auth != null && request.auth.token.email == 'adarshrajendran0@gmail.com';
    }
  }
}
